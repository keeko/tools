// find
${{ model }} = $this->get($id);

if (${{ model }} === null) {
	return new NotFound(['message' => '{{ class }} not found.']);
}

// hydrate
$serializer = {{ class }}::getSerializer();
${{ model }} = $serializer->hydrate(${{ model }}, $data);
{% if validate %}

// validate
if (!${{ model }}->validate()) {
	return new NotValid([
		'errors' => ${{ model }}->getValidationFailures()
	]);
}

{% endif %}

// dispatch
$event = new {{ class }}Event(${{ model }});
$dispatcher = $this->getServiceContainer()->getDispatcher();
$dispatcher->dispatch({{ class }}Event::PRE_UPDATE, $event);
$dispatcher->dispatch({{ class }}Event::PRE_SAVE, $event);
$rows = ${{ model }}->save();
$dispatcher->dispatch({{ class }}Event::POST_UPDATE, $event);
$dispatcher->dispatch({{ class }}Event::POST_SAVE, $event);

$payload = ['model' => ${{ model }}];

if ($rows === 0) {
	return new NotUpdated($payload);
}

return new Updated($payload);